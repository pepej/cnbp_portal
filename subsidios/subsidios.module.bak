/**
 * Render Subsidios Page
 */
function subsidios_page_consultas(){
    global $user;
    $user = user_load(array('uid'=>$user->uid));
  

    $reg= $_GET['reg'];
    $res= $_GET['res'];
    $validQuery=false;

    if(!empty($reg) && empty($res)){
         $query=db_query('SELECT  NroRegistro ,tipo, nroRes, MontoOtorgado, EstadoPago, FechaDeposito, Vto FROM subsidios_x WHERE NroRegistro=:reg',array(':reg'=>$reg));
         $validQuery=true;
    }
     if(empty($reg) && !empty($res)){
         $query=db_query('SELECT  NroRegistro ,tipo, nroRes, MontoOtorgado, EstadoPago, FechaDeposito, Vto FROM subsidios_x WHERE nroRes LIKE :res',array(':res'=>'%'.db_like($res).'%'));
         $validQuery=true;
    }

    if(!empty($reg) && !empty($res)){
         $query=db_query('SELECT  NroRegistro ,tipo, nroRes, MontoOtorgado, EstadoPago, FechaDeposito, Vto FROM subsidios_x WHERE nroRes LIKE :res AND NroRegistro=:reg',array(':res'=>'%'.db_like($res).'%',':reg'=>$reg));
         $validQuery=true;
    }
    if(empty($reg) && empty($res)){
         $query=db_query('SELECT  NroRegistro ,tipo, nroRes, MontoOtorgado, EstadoPago, FechaDeposito, Vto FROM subsidios_x');
         $validQuery=true;
    }

    $form= '<form method="GET">

    
        <label>Filtrar por número de registro</label>
        <input type="text" name="reg" value="'.$_GET['reg'].'">
        <label>Filtrar por número de resolución</label>
           
        <input type="text" name="res" value="'.$_GET['res'].'">




        <input type="submit" value="Filtrar">
    </form>
  

    ';

    if($validQuery==true){

           
            $count = $query->rowCount();

            if($count>0){
                    $table='<br><br><table class="table table-striped">';
                    $table.='<tr><td><b>Biblioteca</b></td><td><b>Tipo Resolución</b></td><td><b>Nro de Resolución</b></td><td><b>Monto Otorgado</b></td><td><b>Estado del Pago</b></td><td><b>Fecha</b></td><td><b>Vencimiento</b></td></tr>';
                    while($result=$query->fetchAssoc()){


                        if($result['Vto'] == "1899-12-31 00:00:00"){$result['Vto']="";}
                        if($result['Vto']=='1899-12-31'){$result['Vto']="";}

                        //if($result['Vto']!=""){$result['Vto']=  date('d-m-Y',strtotime($result['Vto']));}
                        //$result['FechaDeposito']=date('d-m-Y',strtotime($result['FechaDeposito']));
                        $result['MontoOtorgado'] = '$ '.number_format($result['MontoOtorgado'],0,',','.');
                        $resultTable[]= $result;
                        //print_r($result);
                        $table.='<tr><td>BP'.$result['NroRegistro'].'</td><td>'.$result['tipo'].'</td><td>'.$result['nroRes'].'</td><td>'.$result['MontoOtorgado'].'</td><td>'.$result['EstadoPago'].'</td><td>'.$result['FechaDeposito'].'</td><td>'.$result['Vto'].'</td></tr>';


                        }
                    $table.='</table>';

                //$resultTable=theme('table',array('Tipo Resolución','Nro de Resolución','Monto Otorgado','Estado del Pago','Fecha','Vencimiento'),$resultTable);


                $datosBP=db_query('SELECT * FROM subsidios_x WHERE NroRegistro=:reg LIMIT 1',array(':reg'=>$reg));


                while($dato=$datosBP->fetchAssoc()){

                               if($reg)
                                $datoBP='<br/>Para la Biblioteca Popular <strong>'.$reg.'</strong> se han encontrado <strong>'.$count.'</strong> subsidios';
                                }
                }





            $resultados= $datoBP.'<!-- br/>Al día '.date('d/m/Y',time()).' para la BP <strong>'.$registro.'</strong> se han encontrado '.$count.' subsidio/s asignado/s.<br/ -->';
            $resultados.= $table;
            }

        if($count>0){
                return $form.$resultados.'<!--p class="leyendaSubsidios"><br>Ante problemas en la cuenta por favor dirijase a su sucursal bancaria a efectos de corroborar el estado de la misma y recuerde informar la situación al mail <a href="mailto:abenef@conabip.gov.ar">abenef@conabip.gov.ar</a> o telefónicamente al <b>0800-444-0068</b>.</p-->';

        }
        else {
            return $form."<br><br>No se han encontrados subsidios para esta Biblioteca.";
        }


