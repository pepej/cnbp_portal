/**
 * Render Subsidios Page
 */
function subsidios_page(){
    global $user;
    $user = user_load(array('uid'=>$user->uid));
    $reg=$user->field_n_mero_de_registro['und'][0]['value'];


    if($reg){

    		$query=db_query('SELECT  tipo, nroRes, MontoOtorgado, EstadoPago, FechaDeposito, Vto FROM subsidios_x WHERE NroRegistro=:reg',array(':reg'=>$reg));

    		$count = $query->rowCount();

    		if($count>0){
                    $table='<br><br><table class="table table-striped">';
                    $table.='<tr><td><b>Tipo Resolución</b></td><td><b>Nro de Resolución</b></td><td><b>Monto Otorgado</b></td><td><b>Estado del Pago</b></td><td><b>Fecha</b></td><td><b>Vencimiento</b></td></tr>';
    				while($result=$query->fetchAssoc()){


    					if($result['Vto'] == "1899-12-31 00:00:00"){$result['Vto']="";}
